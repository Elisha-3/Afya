<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<!--    container layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        introducing the heading in textview-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afya Yangu"
        android:textSize="30sp"
        android:textColor="#ECF3EA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/shape2"
        android:padding="20dp"
        />

<!--    1st horizontal linear layout-->
<!--it contains two cards-->
<!--    left and right-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        1st card view-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardabout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                above linear layout put image view and text vertically-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/about"
                    android:padding="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABOUT US"
                    android:textStyle="bold"
                    android:textColor="#890F97"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--        2nd card view-->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcauses"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                above linear layout put image view and text vertically-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/causes"
                    android:padding="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAUSES"
                    android:textStyle="bold"
                    android:textColor="#0F2095"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>



    <!--    2nd horizontal linear layout-->
    <!--it contains two cards-->
    <!--    left and right-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--        1st card view-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardsymptoms"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                above linear layout put image view and text vertically-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/symptoms"
                        android:padding="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SYMPTOMS"
                        android:textStyle="bold"
                        android:textColor="#E626A4EF"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--        2nd card view-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardprevention"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                above linear layout put image view and text vertically-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/prevention"
                        android:padding="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PREVENTION"
                        android:textStyle="bold"
                        android:textColor="#F3ED5151"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



        <!--    3rd horizontal linear layout-->
    <!--it contains two cards-->
    <!--    left and right-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--        1st card view-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardtollfree"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                above linear layout put image view and text vertically-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/tollfree"
                        android:padding="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOLL FREE"
                        android:textStyle="bold"
                        android:textColor="#890F97"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--        2nd card view-->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardlocation"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--                above linear layout put image view and text vertically-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/location"
                        android:padding="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOCATION"
                        android:textStyle="bold"
                        android:textColor="#6657ED"
                        android:textSize="20sp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</ScrollView>
